# ============================================================================
# COMPANY PROFILE - Customize your outreach emails
# ============================================================================
# These values appear in generated outreach emails
COMPANY_NAME=Your Company Name
COMPANY_LOCATION=Your City, State
# Include the full formatted rate with currency symbol (e.g., $85/hr, $125/hr, â‚¬100/hr)
COMPANY_HOURLY_RATE=$XX/hr
COMPANY_GITHUB=https://github.com/yourcompany/
COMPANY_CALENDLY=https://calendly.com/your-calendly-link

# Persona Map (JSON) - Maps SMTP email addresses to persona details
# Each key is an email from SMTP_ACCOUNTS_JSON, value has name, role, tone
# Example:
# PERSONA_MAP_JSON='{"persona1@yourdomain.com":{"name":"John","role":"Engineer","tone":"technical"},"persona2@yourdomain.com":{"name":"Jane","role":"Lead","tone":"formal"}}'
PERSONA_MAP_JSON=

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here
SUPABASE_TABLE=tech_scans
SUPABASE_DOMAIN_TABLE=domains_seen
SUPABASE_CATEGORIES_TABLE=categories_used

# ============================================================================
# APIFY CONFIGURATION (Google Places Scraping)
# ============================================================================
# Get your token at: https://console.apify.com/account/integrations
APIFY_TOKEN=your_apify_token_here
APIFY_ACTOR=compass/crawler-google-places
APIFY_MAX_PLACES=1000
APIFY_POLL_INTERVAL=30
APIFY_RUN_TIMEOUT=3600

# ============================================================================
# SCANNER CONFIGURATION
# ============================================================================
SCANNER_MAX_EMAIL_PAGES=10
SCANNER_DISABLE_EMAILS=false

# Categories file for business category rotation
CATEGORIES_FILE=config/categories-250.json

# Override daily category (optional)
# CATEGORY_OVERRIDE=accountant

# Category cooldown: number of days before a category can be reused
# Set to 0 to disable cooldown and allow immediate reuse
CATEGORY_COOLDOWN_DAYS=7

# ============================================================================
# OUTREACH CONFIGURATION
# ============================================================================
OUTREACH_TABLE=tech_scans
OUTREACH_DAILY_LIMIT=500
OUTREACH_PER_INBOX_LIMIT=50

# SMTP Throttling
SMTP_SEND_DELAY_SECONDS=4

# ============================================================================
# SMTP ACCOUNTS (from Zapmail or your email provider)
# ============================================================================
# Export from Zapmail: Settings > Inboxes > Export Configuration
# Format: JSON object with "inboxes" array
# Each inbox requires: email, smtp_host, smtp_port, smtp_user, smtp_password
SMTP_ACCOUNTS_JSON='{
  "inboxes": [
    {
      "email": "persona1@yourdomain.com",
      "smtp_host": "smtp.gmail.com",
      "smtp_port": 587,
      "smtp_user": "persona1@yourdomain.com",
      "smtp_password": "your_app_password_1"
    },
    {
      "email": "persona2@yourdomain.com",
      "smtp_host": "smtp.gmail.com",
      "smtp_port": 587,
      "smtp_user": "persona2@yourdomain.com",
      "smtp_password": "your_app_password_2"
    }
  ]
}'

# ============================================================================
# CALENDLY CONFIGURATION (for booking/conversion tracking)
# ============================================================================
# Get your Personal Access Token from: https://calendly.com/integrations/api_webhooks
# 1. Log into Calendly
# 2. Go to Integrations > API & Webhooks
# 3. Generate a Personal Access Token
# 4. Copy the token (it won't be shown again)
CALENDLY_API_TOKEN=your_calendly_personal_access_token_here
CALENDLY_SYNC_TABLE=tech_scans
CALENDLY_BOOKINGS_TABLE=calendly_bookings
CALENDLY_LOOKBACK_DAYS=7
